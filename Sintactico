
package Sintax;
import com.opencsv.CSVReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.logging.Level;
import java.util.logging.Logger;

 
public class Sintactico {

    int NumeroLineas=1;
    
    public static void main(String[] args) {

	Sintactico obj = new Sintactico();
	obj.Sintac();

  }
    
    public void Sintac() {


        try {
            CSVReader csvReader = new CSVReader(new FileReader("D:\\salida.csv"));
            String[] row;
         
            String no[]= {"Numero","Caracter especial","Operando Compuesto","Literal"};
            String acep[]={"Identificador"};
            String pri[]={"Palabra reservada"};
            String head[]={"Encabezado"};
            int i=0;
            try {
                while((row = csvReader.readNext()) != null) {
                    
                    
                    if (row[0].equals(head[0]))
                    {
                        System.out.println("Encabezado correcto "+NumeroLineas+" "+i);
                    }
                    
                    else if(row[i].equals(pri[0]))
                           
                    {
                        System.out.println("E "+NumeroLineas);
                    }
                    
                    else if (row[0].equals(no[0]) ||
                            row[0].equals(no[1]) ||
                            row[0].equals(no[2]) ||
                            row[0].equals(no[3]) ||
                            row[0].equals(acep[0]) )
                    {
                        System.out.println("Error sintactico en l√≠nea "+NumeroLineas+" "+i);
                    }
//			System.out.println("Token Class= " + country[0] +", Lexema=" + country[1] );
                    
                    NumeroLineas++;
                    i++;
                }
                csvReader.close();
            } catch (IOException ex) {
                Logger.getLogger(Sintactico.class.getName()).log(Level.SEVERE, null, ex);
            }
        } catch (FileNotFoundException ex) {
            Logger.getLogger(Sintactico.class.getName()).log(Level.SEVERE, null, ex);
        }
                       
		
               

	
	}

  }



